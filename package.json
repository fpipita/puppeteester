{
  "name": "@fpipita/puppeteester",
  "type": "module",
  "version": "0.0.1",
  "description": "Run client side tests within a headless Chrome instance.",
  "main": "lib/index.js",
  "bin": {
    "puppeteester": "src/cli/cli.js"
  },
  "author": "Francesco Pipita <francesco.pipita@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@fpipita/esm-middleware": "^1.6.4",
    "@types/chai": "^4.2.12",
    "@types/express": "^4.17.7",
    "@types/glob": "^7.1.3",
    "@types/minimatch": "^3.0.3",
    "@types/puppeteer-core": "^2.0.0",
    "@types/which": "^1.3.2",
    "@types/yargs": "^15.0.5",
    "chokidar": "^3.4.1",
    "express": "^4.17.1",
    "glob": "^7.1.5",
    "minimatch": "^3.0.4",
    "nyc": "^15.1.0",
    "puppeteer-core": "^5.2.1",
    "puppeteer-to-istanbul": "^1.4.0",
    "which": "^2.0.1",
    "yargs": "^15.4.1"
  },
  "peerDependencies": {
    "mocha": "^8"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.3",
    "@types/mocha": "^8.0.0",
    "chai": "^4.2.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "lodash-es": "^4.17.21",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "test": "mocha --ui tdd --timeout 0 test/**/*.test.js",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "eslint . && tsc && npm test",
    "version": "npm run changelog && git add -A"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,html,yml,md}": [
      "prettier --write"
    ]
  }
}
