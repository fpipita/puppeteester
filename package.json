{
  "name": "@fpipita/puppeteester",
  "type": "module",
  "version": "0.0.1",
  "description": "Run client side tests within a headless Chrome instance.",
  "main": "lib/index.js",
  "bin": "bin/puppeteester.js",
  "author": "Francesco Pipita <francesco.pipita@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@fpipita/esm-middleware": "fpipita/esm-middleware",
    "chokidar": "^3.2.2",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.5",
    "minimatch": "^3.0.4",
    "nyc": "^14.1.1",
    "puppeteer-core": "^2.0.0",
    "puppeteer-to-istanbul": "^1.2.2",
    "which": "^2.0.1",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.25",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "esm": "^3.2.25",
    "husky": ">=1",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "test": "mocha --ui tdd --require esm --timeout 0 test/**/*.test.js",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "preversion": "yarn test && yarn eslint .",
    "version": "yarn changelog",
    "postversion": "git push && git push --tags",
    "release": "yarn version && yarn publish --access=public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "example/*",
    "bin/*",
    "src/lib/client/vendor/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "example/*"
    ]
  }
}
