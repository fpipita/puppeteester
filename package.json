{
  "name": "@fpipita/puppeteester",
  "type": "module",
  "version": "0.0.1",
  "description": "Run client side tests within a headless Chrome instance.",
  "main": "lib/index.js",
  "bin": {
    "puppeteester": "src/cli/cli.js"
  },
  "author": "Francesco Pipita <francesco.pipita@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@fpipita/esm-middleware": "^1.6.4",
    "chokidar": "^3.4.0",
    "express": "^4.17.1",
    "glob": "^7.1.5",
    "minimatch": "^3.0.4",
    "nyc": "^15.1.0",
    "puppeteer-core": "^4.0.0",
    "puppeteer-to-istanbul": "^1.4.0",
    "which": "^2.0.1",
    "yargs": "^15.3.1"
  },
  "peerDependencies": {
    "mocha": "^8"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.1.2",
    "conventional-changelog-cli": "^2.0.34",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "prettier": "^2.0.5"
  },
  "scripts": {
    "test": "mocha --ui tdd --timeout 0 test/**/*.test.js",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "npm test && eslint .",
    "version": "npm run changelog && git add -A"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "example/*",
    "bin/*",
    "src/lib/client/vendor/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{json,html,yml,md}": [
      "prettier --write"
    ]
  }
}
