{
  "name": "@fpipita/puppeteester",
  "type": "module",
  "version": "0.0.1",
  "description": "Run client side tests within a headless Chrome instance.",
  "main": "lib/index.js",
  "bin": "bin/puppeteester",
  "author": "Francesco Pipita <francesco.pipita@gmail.com>",
  "license": "GPL-3.0",
  "dependencies": {
    "@fpipita/esm-middleware": "^1.6.0",
    "chokidar": "^3.3.1",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.5",
    "minimatch": "^3.0.4",
    "nyc": "^15.0.0",
    "puppeteer-core": "^2.0.0",
    "puppeteer-to-istanbul": "istanbuljs/puppeteer-to-istanbul",
    "which": "^2.0.1",
    "yargs": "^15.1.0"
  },
  "peerDependencies": {
    "mocha": "^7.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.31",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": ">=4.2.0",
    "lint-staged": "^10.0.2",
    "mocha": "7.0.0-esm1",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "test": "mocha --ui tdd --timeout 0 test/**/*.test.js",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "preversion": "yarn test && yarn eslint .",
    "version": "yarn changelog && git add -A",
    "postversion": "git push && git push --tags"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2019,
      "sourceType": "module"
    }
  },
  "eslintIgnore": [
    "example/*",
    "bin/*",
    "src/lib/client/vendor/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{json,html,yml,md}": [
      "prettier --write"
    ]
  }
}
